<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PostCodeSearch" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EditText.Search">
        <item name="drawableStartCompat">@android:drawable/ic_menu_search</item>
        <item name="android:drawableStart">@android:drawable/ic_menu_search</item>
        <item name="android:background">@drawable/bg_retangule_rounded</item>
        <item name="android:hint">@android:string/search_go</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Theme.Button.Text">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:text">@android:string/cancel</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#258EFF</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>